generator client {
  provider = "prisma-client"
  output   = "./prisma"
}

datasource db {
  provider = "postgresql"
}

enum Environment {
  DEV
  STAGINGS
  PROD
}

model Service {
  id Int @id @default(autoincrement())
  name String
  url String
  environment Environment
  created_at DateTime @default(now())

  status ServiceHealth?
  incidents Incident[]
}

enum CurrentStatus {
  ONLINE
  INSTAVEL
  OFFLINE
}

model ServiceHealth {
  service_id Int @id
  current_status CurrentStatus
  last_checked_at DateTime
  last_response_time_ms Int?

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)
}

enum IncidentStatus {
  INSTAVEL
  OFFLINE
}

model Incident {
  id Int @id @default(autoincrement())
  service_id Int
  status IncidentStatus
  started_at DateTime
  ended_at DateTime?
  duration_seconds Int?
  reason String?

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)
}